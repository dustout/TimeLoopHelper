@inherits LayoutComponentBase


<div class="row" style="position:relative;height:0;z-index:100;">
  <div class="col header-link">
    <p class="float-left"><a href="/">🏠 Home</a></p>

    <div class="float-right">
      <form method="post" class="form-inline" action="Identity/Account/LogOut">
        <AuthorizeView Roles="Admin">
          <a href="/admin">🧙‍♂️ Admin</a>
        </AuthorizeView>
        <AuthorizeView>
          <Authorized>
            <button type="submit" class="nav-link btn btn-link header-link p-0 pl-3" style="text-decoration:underline;">Logout</button>
          </Authorized>
          <NotAuthorized>
            <a href="Identity/Account/Register">Register</a>
            <a class="ml-3" href="Identity/Account/Login">Log in</a>
          </NotAuthorized>
        </AuthorizeView>
      </form>
    </div>
  </div>
</div>

<div class="page flex-shrink-0">
  <div class="main">
    <div class="content">
      <div class="row">
        <div class="col">
          @Body
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer mt-auto py-3">
  <div class="container text-center text-muted header-link">
    <a class="muted-link" href="/press">Press</a>
    <a class="muted-link" href="/contact-us">Contact Us</a>
  </div>
</footer>